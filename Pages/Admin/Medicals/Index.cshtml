@page
@model OfficeTime.Pages.Admin.Medicals.IndexModel

@{
    ViewData["Title"] = "Больничные";
}

<h1>Больничные</h1>

<form asp-page="./Index" method="get" class="row g-3">

    
    <div class="col-auto">
        <label>Найти за период:</label>
            <input type="date" name="dateStart" value="@Model.DateStart" class="form-control" />
    </div>
    <div class="col-auto">
        <input type="date" name="dateEnd" value="@Model.DateEnd" class="form-control" />
    </div>
    <div class="col-auto">
        <input type="submit" value="Найти" class="btn btn-primary" /> |
        <a asp-page="./Index">Вернуться к полному списку</a>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.MedicalView[0].Datestart) *@
                Дата начала
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.MedicalView[0].Dateend) *@
                Дата окончания
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.MedicalView[0].Datecreate) *@
                Дата создания
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.MedicalView[0].Emp) *@
                Сотрудник
            </th>
            @* <th></th> *@
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.MedicalView) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Datestart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dateend)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Datecreate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp)
            </td>
           @*  <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td> *@
        </tr>
}
    </tbody>
</table>
