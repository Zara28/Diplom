@page
@model OfficeTime.Pages.Admin.Posts.EditModel

@{
    ViewData["Title"] = "Редактировать";
}

<h1>Редактировать должность</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostView.Id" />
            <div class="form-group">
                <label asp-for="PostView.Name" class="control-label">Название</label>
                <input asp-for="PostView.Name" class="form-control" />
                <span asp-validation-for="PostView.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostView.Rate" class="control-label">Ставка</label>
                <input asp-for="PostView.Rate" class="form-control" />
                <span asp-validation-for="PostView.Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться к общему списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
