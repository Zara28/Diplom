@page
@model IndexModel
@{
}

<form method="post" class="row g-3">
    <div class="container">
        <div class='col-md-5'>
            <div class="form-group col-auto">
                <div class='input-group date' id='datetimepicker6'>
                    <input type='date' class="form-control" id="start" name="start"/>
                </div>
            </div>
        </div>
        <div class='col-md-5'>
            <div class="form-group col-auto">
                <div class='input-group date' id='datetimepicker7'>
                    <input type='date' class="form-control" id="end" name="end" />
                </div>
            </div>
            <input type="submit" value="Загрузить" class="btn btn-primary" />
        </div>
    </div>
</form>



<table class="table">
    <thead>
        <tr>
            <th>
                @* @Html.DisplayNameFor(model => model.Reports[0].FIO) *@
                ФИО
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Reports[0].percent) *@
                Процент
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Reports[0].holidays) *@
                Отпуск
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Reports[0].hours) *@
                Часы
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Reports != null)
        {
            @foreach (var item in Model.Reports)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FIO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.percent)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.holidays)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.hours)
                    </td>
                </tr>
            }
        }
        
    </tbody>
</table>