@page
@using OfficeTime.Pages.Admin.Holidays
@model EditLKModel

@{
    ViewData["Title"] = "Редактировать";
}

<h1>Редактировать запись об отпуске</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HolidayView.Id" />
            <div class="form-group">
                <label asp-for="HolidayView.Datestart" class="control-label">Дата начала</label>
                <input asp-for="HolidayView.Datestart" class="form-control" />
                <span asp-validation-for="HolidayView.Datestart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HolidayView.Dateend" class="control-label">Дата окончания</label>
                <input asp-for="HolidayView.Dateend" class="form-control" />
                <span asp-validation-for="HolidayView.Dateend" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HolidayView.Pay" class="control-label">Тип</label>
                <input type="checkbox" asp-for="HolidayView.Pay" class="form-control" />
                <span asp-validation-for="HolidayView.Pay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться к общему списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
