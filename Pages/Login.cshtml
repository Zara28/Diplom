@page
@model OfficeTime.Pages.LoginModel
@{
}
<form method="post">
    <section class="vh-100" style="background-color: #508bfc;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card shadow-2-strong" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">

                            <h3 class="mb-5">Войти</h3>

                            <div data-mdb-input-init class="form-outline mb-4">
                                <input id="login" name="login" class="form-control form-control-lg" placeholder="ФИО" />
                            </div>

                            <div data-mdb-input-init class="form-outline mb-4">
                                <input type="password" id="password" name="password"  class="form-control form-control-lg" placeholder="Пароль" />
                            </div>
                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg btn-block" type="submit">Войти</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>
